<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">
    <android.support.v4.view.ViewPager
        android:id="@+id/vp_guide"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never" />

    <Button
        android:id="@+id/btn_skip"
        android:layout_width="48dp"
        android:layout_height="26dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/shape_bg_gray"
        android:text="跳过"
        android:textColor="@color/white"
        android:textSize="14dp"
        android:visibility="visible" />

    <Button
        android:id="@+id/btn_enter"
        android:layout_width="150dp"
        android:layout_height="44dp"
        android:layout_above="@+id/rl_bottom"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="24dp"
        android:background="@drawable/shap_border_red"
        android:text="立即体验"
        android:textColor="@color/tv_red"
        android:textSize="20dp"
        android:visibility="invisible" />

    <RelativeLayout
        android:id="@+id/rl_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="51dp">

        <LinearLayout
            android:id="@+id/ll_point_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"></LinearLayout>

        <View
            android:id="@+id/view_red_point"
            android:layout_width="7dp"
            android:layout_height="7dp"
            android:background="@drawable/point_red" />
    </RelativeLayout>


</RelativeLayout>